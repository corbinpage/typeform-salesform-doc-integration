  <div class="help-bar affix-top">
    <div class="container hidden-xs">
      <div class="row">
        <div class="column">
          <h2>Need help?</h2>
        </div>
        <div class="column phone">
          <i class="icon icon-phone"></i> {{ options.phone }}
        </div>
        <div class="column email">
          <a href="#" data-toggle="modal" data-target="#help-modal"><i class="icon icon-email"></i> {{ options.helpemail }}</a>
        </div>
        <div class="column no-pad chat">
          <a href="#" class="btn-chat"><i class="icon icon-chat"></i> Chat with us</a>
        </div>
      </div>
    </div>
    <div class="container visible-xs text-center">
      <a href="tel:{{ options.phone }}" class="btn btn-primary"><i class="icon icon-phone"></i> {{ options.phone }}</a>
    </div>
  </div>

  <div class="modal fade email" id="contact-modal">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-body">
          <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
          <h3>We're here to help</h3>
          <form class="email-form" id="contact-form" action="{{ template_uri }}/email.php" method="post">
            <p>Enter the following:</p>
            <input type="text" name="NAME" id="form-name-contact" value="" placeholder="Full Name" class="form-control" required>
            <input type="email" name="EMAIL" id="form-email-contact" value="" placeholder="Email Address" class="form-control" required>
            <input type="tel" name="PHONE" id="form-phone-contact" value="" placeholder="Phone Number" class="form-control" required>
            <textarea name="DETAILS" id="details-contact" placeholder="Details" class="form-control" required></textarea>
            <input type="text" name="captcha" class="captcha">
            <input type="hidden" name="TO_ADDRESS" value="contact@audicus.com" placeholder="">
            <input type="hidden" name="redirect_uri" class="redirect-uri" value="{{ site.url }}/#thanks" placeholder="">
            <button class="btn">Submit Email</button>
          </form>
          <h3>Our phone number: <br class="hidden-md hidden-lg">{{ options.phone }}</h3>
        </div>
      </div>
    </div>
  </div>

  <div class="modal fade email" id="help-modal">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-body">
          <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
