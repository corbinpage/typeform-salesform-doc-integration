                  <input type="email" id="mce-EMAIL" name="EMAIL" placeholder="Email address" class="required form-control">
                  <div class="input-group-btn">
                    <button type="submit" class="btn btn-default">Submit</button>
                  </div>
                </div>
              </form>
            </div>
            <ul class="list-social">
              <li><a href="{{ options.facebook }}" class="icon icon-facebook" target="_blank">Facebook</a></li>
              <li><a href="{{ options.twitter }}" class="icon icon-twitter" target="_blank">Twitter</a></li>
              <li><a href="{{ options.pinterest }}" class="icon icon-pinterest" target="_blank">Pinterest</a></li>
              <li><a href="{{ options.googleplus }}" class="icon icon-googleplus" target="_blank">Google+</a></li>
