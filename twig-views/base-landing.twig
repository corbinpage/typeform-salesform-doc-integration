  <footer>

    {% block footer ''%}
    <div class="btm">
      <div class="container">
        <div class="row">
          <div class="col-sm-12">
            <a href="{{ site.url }}" class="logo-white">Audicus</a>
          </div>
          <div class="col-md-8">
            <div class="row">
              <ul class="list-links">
                <li><a href="{{ site.url }}/">Home</a></li>
                <li><a href="{{ site.url }}/why-audicus/">Why Audicus</a></li>
                <li><a href="{{ site.url }}/get-a-hearing-aid/">Get a Hearing Aid</a></li>
                <li><a href="{{ options.shopurl }}">Products</a></li>
                <li><a href="{{ options.shopurl }}/#accessories">Accessories</a></li>
              </ul>
              <ul class="list-links">
                <li><a href="{{ site.url }}/blog/">Blog</a></li>
                <li><a href="{{ site.url }}/customer-service/#faq">FAQ</a></li>
                <li><a href="{{ site.url }}/press/">Press</a></li>
                <li><a href="http://audicus.theresumator.com/apply" target="_blank">Jobs</a></li>
                <li><a href="{{ site.url }}/returns/">Returns</a></li>
              </ul>
              <ul class="list-links">
                <li><a href="{{ site.url }}/customer-service/">Customer Service</a></li>
                <li><a href="#" data-toggle="modal" data-target="#contact-modal">Contact</a></li>
                <li><a href="{{ site.url }}/privacy-policy/">Privacy Policy</a></li>
                <li><a href="{{ site.url }}/terms-of-service/">Terms of Service</a></li>
              </ul>
              <div class="contact-info">
                <div>
                  <i class="icon icon-phone"></i> {{ options.phone }}<br> M-F: 9am-9pm ET
                </div>
                <div>
